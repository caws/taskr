<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Status</th>
    <th colspan="4"></th>
  </tr>
  </thead>
  <tbody>
  <% tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.body %></td>
      <td><%= task.status.description %></td>
      <td>
        <%= link_to task, class: "btn-sm btn-info", remote: true do %>
          Details
        <% end %>
      </td>
      <td colspan="2">
        <%= link_to task, class: "btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' }  do %>
          Destroy
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>